{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
}

